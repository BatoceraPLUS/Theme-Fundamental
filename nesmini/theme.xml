<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (nesmini)
version:		2.0
author:			Caetano Ramos
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The NES Classic Edition system is a miniaturized version of the groundbreaking NES, originally released in 1985. Just plug the NES Classic Edition into your TV, pick up that controller, and rediscover the joy of NES games.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: November 10, 2016</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Nintendo</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>System-on-chip used:	Allwinner R16, Quad-Core ARM Cortex-A7</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 256 MB of DDR3 RAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: Mali-400 MP</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Storage 512 MB NAND Flash TSOP48</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: Internal flash memory</text>
			</text>
		</view>
	</feature>
	
</theme>