<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (internet)
version:		2.0
author:			Caetano Ramos
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, grid">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Manufacturer : World Wide Web</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Year of Release : 1990</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Creator: Tim Berners-Lee</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>Platform : Web Browser</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Best-selling : Google, Facebook, Youtube, etc...</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Protocol : TCP/IP</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Programming Language : HTML, CSS, JavaScript</text>
			</text>

		</view>
	</feature>
	
</theme>